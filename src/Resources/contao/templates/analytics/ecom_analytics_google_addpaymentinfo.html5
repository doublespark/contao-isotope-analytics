<script>
    setTimeout(function(){
        if(window.dataLayer)
        {
            dataLayer.push({
                event: "add_payment_info",
                ecommerce: {
                    currency: "<?= $this->currency ?>",
                    value: "<?= $this->value ?>",
                    payment_type: "<?= $this->payment_type ?>",
                    items: [<?= $this->items ?>]
                }
            });
        }
    },1000);
</script>